$(document).ready(function() {
    var Item = function (Name, DeviceId) {
        this.Name = Name;
        this.DeviceId = DeviceId;
        this.id = "item" + DeviceId;
    }
    var nextId = 0;


    var itemsVm = kendo.observable({ Items: [] });
    var editItemVm = kendo.observable({ Name: "", Id: "" });
    kendo.bind($("#itemsContainer"), itemsVm);
    kendo.bind($("#windowEditItem"), editItemVm);
    buttonAddItem = $("#addItemButton").bind("click", function() {
         // Gibt es hier ein schöneren Weg dem Array ein Item hinzuzufügen
        // als .get und .set zu benutzen?
        var itemTmp = new Item("neues Element " + nextId, nextId);
        var ItemsTmp = itemsVm.get("Items")
        ItemsTmp.push(itemTmp);
        itemsVm.set("Items", ItemsTmp);
        $("span#itemSaveButton").unbind("click").click(function () {
            alert("save " + $(this).parent().find("#editItemId").html());
            var ItemsTmp = itemsVm.get("Items")
                ItemsTmp[$(this).parent().find("").attr("id")] = new Item("muh", 1000);
            console.log(ItemsTmp);
            itemsVm.set("Items", ItemsTmp)
        });
        $("div#item" + nextId).unbind("click").click(function () {
            editItemVm.set("Name", $(this).find(".itemName").html());
            editItemVm.set("Id", $(this).find(".itemId").html());
            windowEditItem.data("kendoWindow").open();
        });
        nextId += 1;
    });
    var windowEditItem = $("#windowEditItem").kendoWindow({
        width: "240px",
        height: "200px",
        title: "Element bearbeiten",
        close: undefined,
        modal: true
    });

});?



<span id="addItemButton" class="k-button">Element hinzufügen</span>
<div id="itemsContainer">
    <div data-bind="source: Items" data-template="itemsTemplate"/>
    <script type="text/x-kendo-template" id="itemsTemplate">
        <div class="item" data-bind="attr: { id: id }">
            Name: <span class="itemName" data-bind="text: Name"/><br/>
            ID: <span class="itemId" data-bind="text: DeviceId"/><br/>
        </div>
    </script>
</div>
<div id="windowEditItem" style="display:none">
    <label>Name:
        <input id="editItemNameInput" class="k-textbox" type="text" placeholder="Enter name" data-bind="value: Name" /><br/>
        <span id="editItemId" data-bind="text: Id"/>
    </label><br/><br/>
    <span class="k-button" id="itemSaveButton">Übernehmen</span>
    <span class="k-button" id="itemDeleteButton">Löschen</span>
</div>
